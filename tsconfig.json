// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./", // ðŸ‘ˆ Mudar de "./src" para "./"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "prisma/seed.ts"], // ðŸ‘ˆ Adicionar prisma/seed.ts
  "exclude": ["node_modules", "dist"]
}
